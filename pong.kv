

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
    canvas.before:
        Color:
        #黄色
            rgba: 1,1,0,1

<Result>:
    size: 200,200
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
    canvas.before:
        Color:
        #黄色
            rgba: 1,1,0,1

    canvas.before:
        Color:
            rgba: 0, 1, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size




<PongPaddle>:
    size: 25, 100
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

    canvas.before:
        Color:
            rgba: 0, 1, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right

    canvas:
        Rectangle:
            pos: self.center_x-5, 0
            size: 10, self.height

    Label:
        font_size: 700
        center_x: root.width / 4
        top: root.top - 500
        text: str(root.player1.score)
        #紫
        color: 0,0,1,1


    Label:
        font_size: 700
        center_x: root.width * 3 / 4
        top: root.top - 500
        text: str(root.player2.score)
        color: 1,0,0,1


    # player1 label
    Label:
        font_size: 100
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: 'Player 1'
        #赤
        color:1, 0, 0, 1

     # player2 label
    Label:
        font_size: 100
        center_x: root.width / 4
        top: root.top - 50
        text: 'Player 2'
        #青
        color: 0,0,1,1

    Label:
        font_size: 200
        center_x: root.width / 2
        top: root.top - 1000
        text: 'PON STADIUM'
        #青
        color: 1,1,0,1


    PongBall:
        id: pong_ball
        center: self.parent.center


    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        color:0,1,0,1

    PongPaddle:
        id: player_right
        x: root.width-self.width
        center_y: root.center_y
